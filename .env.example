# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ecommerce-api

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (comma-separated list of allowed origins for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# JWT Secret (if you plan to add authentication later)
JWT_SECRET=your_super_secret_jwt_key_here

# Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Seed Configuration
# Optional absolute/relative path containing product seed images
SEED_IMAGE_SOURCE_DIR=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# LLM Configuration (Google Colab endpoint)
LLM_ENDPOINT=http://localhost:8000/assistant

# External Services (for future integrations)
# STRIPE_SECRET_KEY=sk_test_...
# SENDGRID_API_KEY=SG...
# AWS_ACCESS_KEY_ID=AKIA...
# AWS_SECRET_ACCESS_KEY=...
# AWS_BUCKET_NAME=your-bucket-name
